<div class="mx-auto my-10 w-full inline-flex justify-center">
  <div class="w-9/12 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <div class="px-5">
      <img class="p-8 rounded-t-lg" src="https://img.freepik.com/free-photo/book-composition-with-open-book_23-2147690555.jpg" alt="Book image" />
    </div>
    <div class="px-5 pb-5">
      <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
        <%= book.title %>
      </h5>
      <div class="flex items-center mt-2.5 mb-5">
        <div class="flex items-center space-x-1 rtl:space-x-reverse">
          <span class="text-gray-900 dark:text-white"><%= book.author %></span>
        </div>
      </div>
      <div class="flex items-center mt-2.5 mb-5">
        <div class="flex items-center space-x-1 rtl:space-x-reverse">
          <span class="text-gray-900 dark:text-white"><%= book.description %></span>
        </div>
      </div>
      <div class="flex items-center justify-between" data-controller="shopping-cart">
        <span class="text-2xl font-bold text-gray-900 dark:text-white">$ <%= book.price %></span>
        <a
          class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none
                focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center
                cursor-pointer"
          data-action="click->shopping-cart#addBook"
          data-shopping-cart-id-param="<%= book.id %>"
        >
          Add to cart
        </a>
      </div>
    </div>
  </div>
</div>
