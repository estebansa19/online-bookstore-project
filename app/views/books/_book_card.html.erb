<div class="mx-auto h-full my-10">
  <div class="w-full max-w-64 border border-gray-700 rounded-lg shadow bg-gray-800">
    <%= link_to book_path(book) do %>
      <img
        class="p-8 rounded-t-lg"
        src="https://img.freepik.com/free-photo/book-composition-with-open-book_23-2147690555.jpg"
        alt="Book image" />

      <div class="px-5 pb-5">
        <h5 class="text-xl font-semibold tracking-tight text-white truncate">
          <%= book.title %>
        </h5>
        <div class="flex items-center mt-2.5 mb-2">
          <div class="flex items-center space-x-1 rtl:space-x-reverse">
            <span class="text-white"><%= book.author %></span>
          </div>
        </div>
        <div class="flex items-center mb-4">
          <div class="flex items-center space-x-1 rtl:space-x-reverse">
            <span class="text-white">Stock: <%= book.stock_quantity %></span>
          </div>
        </div>
        <div class="flex items-center justify-between" data-controller="shopping-cart">
          <span class="text-2xl font-bold text-white">$ <%= book.price %></span>
          <% if book.stock_quantity > 0 %>
            <a
              class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none
                    focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center
                    cursor-pointer"
              data-action="click->shopping-cart#addBook"
              data-shopping-cart-id-param="<%= book.id %>"
            >
              Add to cart
            </a>
          <% else %>
           <a class="text-white font-medium text-sm px-5 py-2.5 text-center cursor-pointer">
              Sold out
            </a>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
