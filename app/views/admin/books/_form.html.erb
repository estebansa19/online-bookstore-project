<div class="p-10 bg-white dark:bg-gray-800 antialiased h-full">
  <%= form_with(model: [:admin, @book], html: { class: 'max-w-sm mx-auto' }) do |f| %>
    <div class="mb-5">
      <%= f.label :title, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= f.text_field :title, autofocus: true, autocomplete: 'title', placeholder: 'Example title', class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>
    <div class="mb-5">
      <%= f.label :author, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= f.text_field :author, autofocus: true, autocomplete: 'author', placeholder: 'Pepe Perez', class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>
    <div class="mb-5">
      <%= f.label :description, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= f.text_area :description, autofocus: true, autocomplete: 'description', placeholder: 'Example description...', class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>
    <div class="mb-5">
      <%= f.label :price, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= f.number_field :price, autofocus: true, autocomplete: 'price', placeholder: '99', class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>
    <div class="mb-5">
      <%= f.label :pages_number, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= f.number_field :pages_number, autofocus: true, autocomplete: 'pages_number', placeholder: '99', class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>
    <div class="mb-5">
      <%= f.label :stock_quantity, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= f.number_field :stock_quantity, autofocus: true, autocomplete: 'stock_quantity', placeholder: '99', class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>

    <div class='actions'>
      <%= f.submit 'Submit', class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
    </div>
  <% end %>
</div>
